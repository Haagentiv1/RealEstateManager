<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/property_detail_tv_title_pictureRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/roboto_slab"
        android:text="Media"
        android:layout_marginTop="30dp"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/property_detail_picture_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/property_detail_tv_title_pictureRv"
        tools:listitem="@layout/property_detail_item_fragment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/property_detail_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/property_detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/property_detail_picture_rv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain_in_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_tv_title_tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Description"
                android:textColor="@color/secondaryDarkColor"
                android:textSize="24sp"
                app:fontFamily="@font/roboto_slab"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_slab"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/property_detail_tv_title_tvDescription" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_tv_squareMeter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="surface"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/ic_outline_square_meter_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/property_detail_tv_description" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_tv_squareMeter_data"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_slab"
                app:layout_constraintBottom_toBottomOf="@+id/property_detail_tv_squareMeter_title"
                app:layout_constraintStart_toEndOf="@+id/property_detail_tv_squareMeter_title"
                app:layout_constraintTop_toTopOf="@+id/property_detail_tv_squareMeter_title"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_numberOfRooms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rooms"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/ic_outline_house_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/property_detail_tv_squareMeter_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_numberOfRooms_data"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_slab"
                app:layout_constraintBottom_toBottomOf="@+id/property_detail_numberOfRooms_title"
                app:layout_constraintStart_toEndOf="@+id/property_detail_numberOfRooms_title"
                app:layout_constraintTop_toTopOf="@+id/property_detail_numberOfRooms_title"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_numberOfBedRooms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="BedRooms :"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/ic_outline_bed_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/property_detail_numberOfRooms_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_numberOfBedRooms_data"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_slab"
                app:layout_constraintBottom_toBottomOf="@id/property_detail_numberOfBedRooms_title"
                app:layout_constraintStart_toEndOf="@id/property_detail_numberOfBedRooms_title"
                app:layout_constraintTop_toTopOf="@id/property_detail_numberOfBedRooms_title"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_numberOfBathRooms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="bathRooms:"
                android:fontFamily="@font/roboto_slab"
                app:drawableStartCompat="@drawable/ic_outline_bathroom_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/property_detail_numberOfBedRooms_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_numberOfBathRooms_data"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_slab"
                app:layout_constraintBottom_toBottomOf="@id/property_detail_numberOfBathRooms_title"
                app:layout_constraintStart_toEndOf="@id/property_detail_numberOfBathRooms_title"
                app:layout_constraintTop_toTopOf="@id/property_detail_numberOfBathRooms_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_realEstateLocationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_slab"
                android:layout_marginEnd="120dp"
                android:text="Location"
                app:drawableStartCompat="@drawable/ic_outline_location_on_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/property_detail_numberOfBathRooms_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@id/property_detail_realEstateLocationTitle"
                app:layout_constraintTop_toBottomOf="@id/property_detail_realEstateLocationTitle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_flatNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/roboto_slab"
                app:layout_constraintStart_toStartOf="@id/property_detail_realEstateLocationTitle"
                app:layout_constraintTop_toBottomOf="@id/property_detail_address" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@id/property_detail_realEstateLocationTitle"
                app:layout_constraintTop_toBottomOf="@id/property_detail_flatNumber" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@id/property_detail_realEstateLocationTitle"
                app:layout_constraintTop_toBottomOf="@id/property_detail_town" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/property_detail_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/roboto_slab"
                app:layout_constraintStart_toStartOf="@id/property_detail_realEstateLocationTitle"
                app:layout_constraintTop_toBottomOf="@id/property_detail_zipcode" />

            <ImageView
                android:id="@+id/property_detail_mapStaticContainer_iv"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@color/secondaryColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/property_detail_country"
                app:layout_constraintVertical_bias="0.042" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>